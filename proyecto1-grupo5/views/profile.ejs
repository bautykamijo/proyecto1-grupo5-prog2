<%- include('./partials/head') %>
<% if (locals.user != null) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
<% } %>

<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src=<%= lista.foto_perfil %> alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"><%=lista.nombre%> 
                    <% if (locals.user && lista.id == locals.user.id){ %>
                    <a href="/users/profile-edit/<%=lista.id%>">
                        <i class="fas fa-cog"></i>
                    </a>
                    <% } %>
                </h1>
                
            </div>
            <div>
                <ul class="">
                    <li><%-lista.productos.length%> productos</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Mis productos</h2>
        </div>
        <!-- Show mis productos -->

        <% if (lista.productos.length == 0) { %>
            
        <div class="col-12">
            <br><br><br><br>
            <h2 class="products-title" style="display: flex; justify-content: center; font-size: 2.8em;">Â¡No has publicado ningun producto!</h2>
        </div>

        <% } else { %>




        <%  for( let i = 0; i < lista.productos.length; i++ ) { %>
            <% let productos = lista.productos[i] %>
            <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">

                <a href="/product/detail/<%= productos.id %>">
                    <figure class="product-box_image">
                        <img class="camisetas" src= <%= productos.img %> alt="foto de <%= productos.nombre %>">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= productos.nombre %></h2>
                        <p><%= productos.descripcion %></p>
                        <p>Comentarios: <%=lista.comentarios.length%> </p>
                    </article>
                </a>
            </section>
        </div>
        <% } %>
    </div>
</div>
<% } %>
<!-- /Mis productos -->

<%- include('./partials/footer') %>