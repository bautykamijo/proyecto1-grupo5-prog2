<%- include('./partials/head') %>
<%- include('./partials/headerLogueado') %>

<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src=<%= lista.usuario.fotoPerfil %> alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"><%=lista.usuario.nombre%> 
                    <a href="/users/profile-edit">
                        <i class="fas fa-cog"></i>
                    </a>
                </h1>
                <a class="btn mt-3 ml-4" href="">SEGUIR</a>
            </div>
            <div>
                <ul class="">
                    <li>8 productos</li>
                    <li>200 seguidores</li>
                    <li>300 comentarios</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Mis productos</h2>
        </div>
        <!-- Show mis productos -->

        <%  for( let i = 0; i < 6; i++ ) { %>
            <% let productos = lista.productos[i] %>
            <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">

                <a href="../routes/product.js">
                    <figure class="product-box_image">
                        <img src= <%= productos.image %> alt="foto de <%= productos.producto %>">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= productos.producto %></h2>
                        <p><%= productos.descripcion %></p>
                        <p>Comentarios: X</p>
                    </article>
                </a>
            </section>
        </div>
        <% } %>
    </div>
</div>

<!-- /Mis productos -->

<%- include('./partials/footer') %>