<%- include('./partials/head') %>
<% if (locals.user != null) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
<% } %>

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Tus resultados de busqueda son: </h2>
        </div>
        <!-- Show the "ultimos" products -->
        
        
        <%  for( let i = 1; i<5 ; i++ ) { %>
            <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">

                <a href="/product/detail/<%= lista[i].id %>">
                    <figure class="product-box_image">
                        <img class="camisetas" src= <%= lista[i].image %> alt="foto de <%= lista[i].nombre %>">
                    </figure>
                    <article class="product-box_data cajita">
                        <h2><%= lista[i].nombre %></h2>
                        <p><%= lista[i].descripcion %></p>
                        <p>Comentarios: <%= comments.length %> </p>
                    </article>
                </a>
            </section>
        </div>
        <% } %>
    </div>
</div>
      


<%- include('./partials/footer') %>