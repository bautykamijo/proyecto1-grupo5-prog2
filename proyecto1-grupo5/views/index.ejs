<!-- Novedades -->

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Camisetas del Futbol Argentino</h2>
        </div>
        <!-- Show the "ultimos" products -->
        
        
        <%  for( let i = 0; i < lista.length; i++ ) { %>
            <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">

                <a href="../routes/product.js">
                    <figure class="product-box_image">
                        <img src= <%= lista[i].image %> alt="foto de <%= lista[i].producto %>">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= lista[i].producto %></h2>
                        <p><%= lista[i].descripcion %></p>
                        <p>Comentarios: X</p>
                    </article>
                </a>
            </section>
        </div>
        <% } %>
    </div>
</div>

        
